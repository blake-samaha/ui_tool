{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://schemas.cognite.ai/toolkit/config_env.schema.json",
    "title": "Toolkit config.[env].yaml (minimal)",
    "type": "object",
    "additionalProperties": false,
    "required": ["environment"],
    "properties": {
        "environment": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "project"],
            "properties": {
                "name": { "type": "string", "minLength": 1 },
                "project": { "type": "string", "minLength": 1 },
                "type": { "type": "string" },
                "selected": {
                    "type": "array",
                    "items": { "type": "string" }
                }
            }
        },
        "variables": {
            "type": "object"
        }
    }
}


